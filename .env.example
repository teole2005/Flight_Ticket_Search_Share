APP_NAME=Flight Search Service
API_PREFIX=/v1

# Use postgres in docker:
# DATABASE_URL=postgresql+asyncpg://flight:flight@localhost:5432/flight_search
DATABASE_URL=sqlite+aiosqlite:///./flight_search.db
REDIS_URL=redis://localhost:6379/0

CACHE_TTL_SECONDS=180
CONNECTOR_TIMEOUT_SECONDS=20
CONNECTOR_RETRIES=1
MAX_PARALLEL_CONNECTORS=4
MAX_OFFERS_PER_SEARCH=50
DEFAULT_SOURCES=trip_com,airasia

ENABLE_BROWSER_CONNECTORS=true
BROWSER_HEADLESS=true
REQUEST_TIMEOUT_SECONDS=15
FX_RATE_TTL_SECONDS=1800

# Tune selectors if target websites change:
TRIP_COM_RESULT_SELECTOR=[data-testid^='u-flight-card-']
TRIP_COM_LINK_SELECTOR=a[href]
TRIP_COM_WAIT_MS=6000
TRIP_COM_MAX_CARDS=30

AIRASIA_RESULT_SELECTOR=[data-testid*='flight'], article, .flight-item, .flightCard
AIRASIA_LINK_SELECTOR=a[href]
AIRASIA_WAIT_MS=3500
AIRASIA_MAX_CARDS=20
